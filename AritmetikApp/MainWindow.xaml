<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="ArtimetikApp" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel>
    <Label FontWeight="Bold" FontSize="30">Aritmetiken</Label>
    <Label FontWeight="Bold">Tal 1:</Label>
    <TextBox Name="tbxTal1"> </TextBox>
    <Label FontWeight="Bold">Operator(+,-,*,/)</Label>
    <TextBox Name="tbxOperator"> </TextBox>
    <Label FontWeight="Bold">Tal 2:</Label>
    <TextBox Name="tbxTal2"> </TextBox>
    <Button Margin="5" Click="KlickBeräkna">Beräkna</Button>
    <Label FontWeight="Bold" Name="lblResultat"></Label>
    </StackPanel>
</Window>
