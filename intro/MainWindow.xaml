<Window x:Class="intro.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:intro" mc:Ignorable="d" Title="Mitt första fönsterprogram"
    Height="450" Width="450"
    MaxHeight="500" MaxWidth="500"
    MinHeight="250" MinWidth="250"
    SizeToContent="WidthAndHeight"
    Background="#DDD">
    <StackPanel Margin="10">
        <Label FontSize="30" FontWeight="bold">Hej Världen!!!</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Ange namn:</Label>
            <TextBox Margin="5" Width="80"></TextBox>
        </StackPanel>
        <Button
            Background="red" Foreground="yellow" FontSize="20" Padding="10">Klicka för att få virus</Button>
    </StackPanel>
</Window>