<Window x:Class="MelloApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelloApp"
        mc:Ignorable="d"
        Background="#777777"
        Title="MelloApp" Height="600" Width="300">
        <StackPanel>
         <Image Source="bilder/Melodifestivalen_Logo.png" Width="200" Margin="0,0,0,10"></Image>
        <Label>Vilken är din favoritlåt?</Label>

        <Button  Name="röd" Click="KlickRösta" Background="Red" Foreground="White" Margin="10">Röd</Button>
        <Button  Name="blå" Click="KlickRösta" Background="Blue" Foreground="White" Margin="10">Blå</Button>
        <Button  Name="grön" Click="KlickRösta" Background="LimeGreen" Foreground="White" Margin="10">Grön</Button>
        <Button  Name="lila" Click="KlickRösta" Background="Purple" Foreground="White" Margin="10">Lila</Button>
        <Button  Name="gul" Click="KlickRösta" Background="Yellow" Foreground="White" Margin="10">Gul</Button>
        <Button  Name="återställ" Click="KlickÅterställ" Background="Cyan" Foreground="Black" Margin="10">Återställ</Button>

        <Label>Antal röster:</Label>
        <TextBox  Margin="10" Name="txbResultat" IsReadOnly="True"></TextBox>
        </StackPanel>
</Window>
